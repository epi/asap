<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:background="@drawable/background">
	<TextView android:id="@+id/name" android:textSize="28sp" android:gravity="center_horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content" />
	<TextView android:id="@+id/author" android:textSize="24sp" android:gravity="center_horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content" />
	<TextView android:id="@+id/date" android:textSize="24sp" android:gravity="center_horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content" />
	<TextView android:id="@+id/song" android:textSize="20sp" android:gravity="center_horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content" />
	<Button android:id="@+id/stop_button" android:text="@string/stop_button"
		android:textSize="28sp" android:layout_gravity="center_horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
